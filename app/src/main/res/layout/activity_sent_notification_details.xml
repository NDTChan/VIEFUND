<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="mobile.bts.com.viefund.Activity.NotificationDetailsActivity">
    <!--<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"-->
        <!--xmlns:tools="http://schemas.android.com/tools"-->
        <!--android:layout_width="match_parent"-->
        <!--android:layout_height="match_parent"-->
        <!--android:scrollbars = "vertical"-->
        <!--android:scrollbarStyle="insideInset"-->
        <!--android:fillViewport="true"-->
        <!--android:background="#FAFAFA"-->
        <!--&gt;-->
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:background="#FAFAFA">
            <include
                android:id="@+id/toolbarNotificationInfo"
                layout="@layout/appbar_dktv"/>
            <TextView
                android:id="@+id/twSubjectNoticeInfo"
                android:layout_margin="16dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:textSize="@dimen/text_size_16sp"
                android:textColor="@color/text_color"/>
            <ImageView
                android:layout_margin="8dp"
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="#000000"
                android:layout_marginTop="24dp"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="128dp"
                android:orientation="horizontal"
                android:layout_marginTop="24dp"
                android:background="#FAFAFA">
                <LinearLayout
                    android:layout_width="86dp"
                    android:layout_height="86dp"
                    android:orientation="horizontal"
                    android:gravity="center"
                    android:layout_gravity="center"
                    android:background="#FAFAFA">
                    <de.hdodenhof.circleimageview.CircleImageView
                        android:id="@+id/iwAvaNotification"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:src="@drawable/account"
                        android:background="#FAFAFA"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:background="#FAFAFA"
                    android:paddingLeft="16dp">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <TextView
                            android:id="@+id/twFomeNoticeInfo"
                            android:layout_weight="1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            />
                    </LinearLayout>
                    <TextView
                        android:id="@+id/twToNoticeinfo"
                        android:layout_weight="1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:ellipsize="end"
                        android:maxLines="1"/>
                    <TextView
                        android:id="@+id/twDateNoticeInfo"
                        android:layout_weight="1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:ellipsize="end"
                        android:maxLines="1"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="#FAFAFA"
                    >
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="36px"
                android:background="#FFFFFF">
                <ScrollView
                    android:layout_width="fill_parent"
                    android:layout_height="match_parent"
                    android:background="#FFFFFF">
                    <WebView
                        android:id="@+id/wvContentNoticeInfo"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:linksClickable="true"
                        android:autoLink="web"
                        android:background="#FFFFFF"
                        android:textSize="@dimen/text_size_12sp">
                    </WebView>
                </ScrollView>
            </LinearLayout>
        </LinearLayout>
    <!--</ScrollView>-->
</LinearLayout>
